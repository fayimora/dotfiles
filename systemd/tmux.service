[Unit]
Description=Start tmux in detached session
After=graphical-session.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/sh -c '/usr/bin/tmux has-session -t default 2>/dev/null || /usr/bin/tmux new-session -d -s default'
ExecStop=/bin/sh -c '/usr/bin/tmux kill-session -t default 2>/dev/null || true'
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=default.target
